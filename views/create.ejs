<%- include('./partials/header')-%>

<form method="POST" action="/car/create">
    
    <div class="form-group">
      <label for="exampleInputPassword1">Modele</label>
      <input type="text" class="form-control" id="exampleInputPassword1" name="name">
    </div>

    <div class="form-group">
        <label for="exampleFormControlSelect1">Constructeur</label>
        <select class="form-control" id="exampleFormControlSelect1" name="factories">
        <% facturies.forEach(function(factory) {%>
          <option value="<%= factory.id%>"><%= factory.name%></option>
        <%});%>
        </select>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Annee</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="year">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Prix</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="price">
    </div>

    <div class="form-group">
        <label for="exampleFormControlSelect1">Energie</label>
        <select class="form-control" id="exampleFormControlSelect1" name="energies">
        <% energies.forEach(function(energy) {%>
          <option value="<%= energy.id%>"><%= energy.name%></option>
        <%});%>
        </select>
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>

  </form>

<%- include('./partials/footer')-%>